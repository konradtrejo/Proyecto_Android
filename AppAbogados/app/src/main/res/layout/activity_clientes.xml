<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ClientesActivity"
android:layout_margin="5dp"
    >


<TextView
    android:id="@+id/textNombres"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:textColor="@color/black"
    android:text="Nombres" />

<EditText
    android:id="@+id/edit_nombres"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="2dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:hint="Nombres" />

<TextView
    android:id="@+id/textApellidos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="40dp"
    android:textColor="@color/black"
    android:text="Apellidos" />

<EditText
    android:id="@+id/edit_apellidos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="32dp"
    android:ems="10"
    android:inputType="textPersonName"

    android:hint="Apellidos" />

<TextView
    android:id="@+id/textDNI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="70dp"
    android:textColor="@color/black"
    android:text="DNI" />

<EditText
    android:id="@+id/edit_dni"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="62dp"
    android:ems="10"
    android:inputType="number"
    android:hint="DNI" />
<TextView
    android:id="@+id/textEdad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="100dp"
    android:textColor="@color/black"
    android:text="Edad" />

<EditText
    android:id="@+id/edit_edad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="92dp"
    android:ems="10"
    android:inputType="number"
    android:hint="Edad" />
<TextView
    android:id="@+id/textdireccion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="130dp"
    android:textColor="@color/black"
    android:text="Dirección" />

<EditText
    android:id="@+id/edit_direccion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="122dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:hint="Dirección" />
<TextView
    android:id="@+id/textCelular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="160dp"
    android:textColor="@color/black"
    android:text="Celular" />

<EditText
    android:id="@+id/edit_celular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="123dp"
    android:layout_marginTop="152dp"
    android:ems="10"
    android:inputType="phone"
    android:hint="Celular" />
<Button
    android:id="@+id/btn_add_cliente"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="200dp"
    android:onClick="setAddClientes"
    android:text="Adicionar"
    />


    <ListView
        android:id="@+id/listView_clientes"
        android:layout_width="174dp"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="280dp" />

</RelativeLayout>